{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "eslint:fix": "eslint . --fix --ignore-path .gitignore",
    "eslint:check": "eslint . --ignore-path .gitignore",
    "format:fix": "prettier --write . --ignore-path .gitignore --ignore-path .prettierignore",
    "format:check": "prettier --check . --ignore-path .gitignore --ignore-path .prettierignore",
    "stylelint:fix": "stylelint \"src/**/*.{css,scss,svelte}\" --ignore-path .gitignore",
    "stylelint:check": "stylelint \"src/**/*.{css,scss,svelte}\" --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "eslint": "^8.4.1",
    "eslint-plugin-sonarjs": "^0.11.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "husky": "^7.0.4",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-scss": "^4.0.1",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.19.3",
    "sirv-cli": "^1.0.0"
  }
}
